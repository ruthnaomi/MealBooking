<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ke.co.slab.mealbooking">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
        <activity android:name=".FoodListActivity" />
        <activity
            android:name=".DishDetailsActivity"
            android:label="@string/title_activity_dish_details" />
        <activity android:name=".CartActivity" />
        <activity android:name=".PaymentActivity" />
        <activity android:name=".ChefListActivity" />
        <activity
            android:name=".ChefActivity"
            android:label="@string/title_activity_chef"
            android:theme="@style/AppTheme" />
        <activity android:name=".ChefAddNewMeal"></activity>
    </application>

</manifest>