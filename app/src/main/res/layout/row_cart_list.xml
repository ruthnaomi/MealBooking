<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    tools:style="@style/CardView">


    <GridLayout
        android:columnCount="5"
        android:rowCount="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/meal_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_dish"
            android:layout_rowSpan="2"
            android:contentDescription="@string/app_name"
            android:layout_margin="@dimen/activity_vertical_margin"/>
        <TextView
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:id="@+id/meal_name"
            android:text="Dish Name"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/custom_gilanis_primary_dark"
            android:layout_columnSpan="3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/meal_qty"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:text="Qty: 2"
            android:layout_row="0"
            android:layout_column="3"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginStart="@dimen/activity_vertical_margin" />
        <TextView
            android:id="@+id/meal_net_price"
            android:text="Price: Ksh. 20 KES"
            android:layout_row="1"
            android:layout_column="2"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"/>
        <TextView
            android:id="@+id/meal_gross_price"
            android:layout_marginLeft="@dimen/activity_vertical_margin"
            android:layout_row="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="3"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginStart="@dimen/activity_vertical_margin" />
        <ImageView
            android:id="@+id/delete"
            android:layout_row="0"
            android:layout_rowSpan="2"
            android:layout_column="4"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/spacing_cart_list"
            android:padding="@dimen/activity_vertical_margin"
            android:src="@drawable/ic_delete_black_24dp"
            android:contentDescription="@string/app_name" />
    </GridLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/custom_gilanis_divider"/>

</android.support.v7.widget.CardView>
